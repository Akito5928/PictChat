{
  "manifest_version": 3,
  "name": "PictChat Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://pictsense.com/*",
    "https://*.pictsense.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://akito5928.github.io/PictChat",
        "https://akito5928.github.io/PictChat/",
        "https://akito5928.github.io/PictChat/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "pictsense_ws.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
